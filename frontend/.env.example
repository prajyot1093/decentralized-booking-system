# Frontend Environment Variables

# React App Configuration
REACT_APP_NAME=BookChain - Decentralized Booking System
REACT_APP_VERSION=1.0.0

# Blockchain Configuration
REACT_APP_CHAIN_ID=1337
REACT_APP_CHAIN_NAME=Localhost
REACT_APP_RPC_URL=http://127.0.0.1:8545

# Smart Contract Addresses (to be filled after deployment)
REACT_APP_BOOKING_CONTRACT_ADDRESS=
REACT_APP_PROPERTY_NFT_CONTRACT_ADDRESS=

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_BACKEND_URL=http://localhost:3001

# IPFS Configuration
REACT_APP_IPFS_GATEWAY=https://ipfs.io/ipfs/
REACT_APP_PINATA_API_KEY=
REACT_APP_PINATA_SECRET_KEY=

# Feature Flags
REACT_APP_ENABLE_TESTNET=true
REACT_APP_ENABLE_WALLET_CONNECT=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Debug Mode
REACT_APP_DEBUG_MODE=true
REACT_APP_ENABLE_CONSOLE_LOGS=true
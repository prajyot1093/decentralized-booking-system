# Environment variables for Decentralized Booking System
# Copy this file to .env and fill in your values

# ============================================
# BLOCKCHAIN NETWORK CONFIGURATION
# ============================================

# Default network for backend services
BLOCKCHAIN_NETWORK=localhost

# Private key for contract deployment (without 0x prefix)
# Generate a new wallet for development - NEVER use your main wallet
PRIVATE_KEY=

# ============================================
# RPC ENDPOINTS
# ============================================

# Ethereum Networks
MAINNET_RPC_URL=
SEPOLIA_RPC_URL=

# Polygon Networks  
POLYGON_RPC_URL=
MUMBAI_RPC_URL=

# Alternative RPC providers (Infura, Alchemy, QuickNode)
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID
# MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_PROJECT_ID

# ============================================
# BLOCKCHAIN EXPLORER API KEYS (for verification)
# ============================================

# Etherscan (for Ethereum networks)
ETHERSCAN_API_KEY=

# Polygonscan (for Polygon networks)
POLYGONSCAN_API_KEY=

# ============================================
# GAS REPORTING & MONITORING
# ============================================

# Enable gas reporting during tests
REPORT_GAS=false

# CoinMarketCap API for gas cost in USD
COINMARKETCAP_API_KEY=

# ============================================
# BACKEND API CONFIGURATION
# ============================================

# API server port
PORT=3001

# API base URL (for frontend)
REACT_APP_API_URL=http://localhost:3001

# ============================================
# FRONTEND WEB3 CONFIGURATION  
# ============================================

# Default network for frontend Web3 connection
REACT_APP_DEFAULT_NETWORK=localhost

# Enable debug mode for Web3 connections
REACT_APP_DEBUG_WEB3=false

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Node environment
NODE_ENV=development

# Enable verbose logging
DEBUG=false

# Auto-refresh interval for real-time data (milliseconds)
REACT_APP_REFRESH_INTERVAL=30000

# ============================================
# SECURITY SETTINGS
# ============================================

# CORS origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT secret for API authentication (generate a strong random string)
JWT_SECRET=

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ============================================
# DEPLOYMENT SETTINGS
# ============================================

# Enable contract verification after deployment
AUTO_VERIFY=false

# Deployment gas price multiplier (1.0 = normal, 1.5 = 50% higher)
GAS_MULTIPLIER=1.0

# Max gas limit for deployment transactions
MAX_GAS_LIMIT=10000000

# ============================================
# EXAMPLES (uncomment and modify as needed)
# ============================================

# Example for Alchemy
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/demo
# POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/demo

# Example for Infura  
# SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/demo
# MUMBAI_RPC_URL=https://polygon-mumbai.infura.io/v3/demo

# Example development wallet (DO NOT USE IN PRODUCTION)
# PRIVATE_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef